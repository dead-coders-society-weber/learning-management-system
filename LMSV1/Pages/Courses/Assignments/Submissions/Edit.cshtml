            <input type="hidden" asp-for="Submission.SubmissionID" />
            <div class="form-group">
                <label asp-for="Submission.AssignmentID" class="control-label"></label>
                <select asp-for="Submission.AssignmentID" class="form-control" asp-items="ViewBag.AssignmentID"></select>
                <span asp-validation-for="Submission.AssignmentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Submission.UserID" class="control-label"></label>
                <select asp-for="Submission.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Submission.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Submission.FileName" class="control-label"></label>
                <input asp-for="Submission.FileName" class="form-control" />
