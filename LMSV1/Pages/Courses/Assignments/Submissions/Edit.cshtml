            <div class="form-group">
                <label asp-for="Submission.Score" class="control-label"></label>
                <input asp-for="Submission.Score" class="form-control" />
                <span asp-validation-for="Submission.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Submission.SubmissionDate" class="control-label"></label>
                <input asp-for="Submission.SubmissionDate" class="form-control" />
                <span asp-validation-for="Submission.SubmissionDate" class="text-danger"></span>
